<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2" author="Daniil">

        <createTable tableName="addresses">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="hotel_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_address_hotel" references="hotels(id)"/>
            </column>
            <column name="house_number" type="INT"/>
            <column name="street" type="VARCHAR(255)"/>
            <column name="city" type="VARCHAR(255)"/>
            <column name="country" type="VARCHAR(255)"/>
            <column name="post_code" type="VARCHAR(20)"/>
        </createTable>

        <createTable tableName="contacts">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="hotel_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_contacts_hotel" references="hotels(id)"/>
            </column>
            <column name="phone" type="VARCHAR(50)"/>
            <column name="email" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="arrival_times">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="hotel_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_arrival_hotel" references="hotels(id)"/>
            </column>
            <column name="check_in" type="TIME"/>
            <column name="check_out" type="TIME"/>
        </createTable>

        <createTable tableName="amenities">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <createTable tableName="hotel_amenities">
            <column name="hotel_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_hotelamen_hotel" references="hotels(id)"/>
            </column>
            <column name="amenity_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_hotelamen_amenity" references="amenities(id)"/>
            </column>
        </createTable>
        <addPrimaryKey
                columnNames="hotel_id, amenity_id"
                constraintName="pk_hotel_amenities"
                tableName="hotel_amenities" />

    </changeSet>

</databaseChangeLog>